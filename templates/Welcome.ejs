<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
    <title>Weather</title>
  </head>
  <body>
    <h1>Welcome <%-user%></h1>
    <p>Enter a City: <input type="text" name="city" id="city">&nbsp;<input type="submit" value="Check Weather" id="weatherRequest"></p>
    <input type="submit" value="Add City" id = "addLocation">
  </body>
  <script>
    //API Information
    const apikey = 'ac08c1c364001a27b81d418f26e28315'
    //Submit Weather request for city
    document.getElementById("weatherRequest").addEventListener(click, getWeather(document.getElementById("city").value))
    async function getWeather(city){
          console.log(`We're here! We're checking the weather in ${city}!`)
          const response = await fetch(`https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apikey}`);
          const weather_json = await response.json();
          console.log(weather_json);
    }
  </script>
</html>
